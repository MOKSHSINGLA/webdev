    <style>
        .circle{
            
           
            height:150px;
            width:150px;
            border-radius: 100px;
            float:left;
            margin-right:40px;
            
        }
        #brown-circle{
            background-color:brown;
        }
    
        
        #red-circle{
            background-color:red;
        }
        
        
        
        
        #blue-circle{
            background-color:blue;
        }
    
    </style>
    </head>
    <body>
       <div class="circle" id="brown-circle"></div>
        
        <div class="circle" id="red-circle"></div>
        
        <div class="circle" id="blue-circle"></div>
        
        
    <script type="text/javascript">
       
        document.getElementById("brown-circle").onclick =function(){
            document.getElementById("brown-circle").style.display="none";
            alert("!!!You touched brown circle!!!");
            
            
        }
        document.getElementById("red-circle").onclick =function(){
            document.getElementById("red-circle").style.display="none";
            alert("!!!You touched red circle !!!");
            
            
        }
        document.getElementById("blue-circle").onclick =function(){
            document.getElementById("blue-circle").style.display="none";
            alert("!!!You touched blue circle !!!");
              
        }
        </script>
